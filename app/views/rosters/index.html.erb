<h1 class="my-8 text-4xl font-semibold text-gray-700">rosters</h1>
<div class="w-full px-4 mb-12 xl:w-8/12 xl:mb-0">
<div class="relative flex flex-col w-full min-w-0 mb-6 break-words bg-white rounded shadow-lg">
  

	<table >
		<thead >
			<tr class="flex w-full mb-4">
				<th class="w-1/4 p-4">Name</th>
        <th class="w-1/4 p-4">team_id</th>
         <th class="w-1/4 p-4">user_id</th>
        <th class="w-1/4 p-4">Action</th>
				

			</tr>
		</thead>
    <tbody>
    <% @rosters.each do |roster| %>
      <tr class="flex w-full mb-4">
        <td class="w-1/3 px-4 py-3 text-left"><%= roster.name %></td>
        <td class="w-1/3 px-4 py-3 text-left"><%= roster.team_id %></td>
        <td class="w-1/3 px-4 py-3 text-left"><%= roster.user_id %></td>
       
     
        <td class="px-4 py-3 text-left"><%= link_to 'Show', rosters_path %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Edit', edit_roster_path(roster) %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Destroy', roster_path(:id => roster.id), :method => :delete%></a></td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
