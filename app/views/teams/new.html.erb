

<div class="container">   
  <%= simple_form_for @team  do |f| %>   
      
      <div>   
       <label for="name" class="block text-sm font-medium leading-5 text-gray-700">Name</label>

                           <%= f.text_field :name, class: "form-input flex-1 block w-full rounded-none rounded-md transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
 
        </div>   
          <div>   
        <%= f.text_field :tournament_id %>   
        </div>
   
      <div>   
        <%= link_to 'Back', { controller: 'teams', action: 'index'} %>   
        <%= f.submit 'Create team' ,{ controller: 'teams', action: 'create'} %>   
      </div>   
  <% end %> 
</div>  


 
