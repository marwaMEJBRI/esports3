<div class="navigation">
  <div class="logo"><img src="https://cdn2.vectorstock.com/i/thumbs/53/56/panther-head-vector-27995356.jpg"/><a href="/">E-<span>Sports</span></a></div> 
   

    <%if !(user_signed_in?) %>

      <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/home/document">Blog</a></li>
      <li><a href= '/home/contact'>Contact</a></li>
      </ul>
      <a class="alogin" href="/users/sign_in">Login / Register</a>


    <% elsif  current_user && current_user.has_role?(:admin) %> 
      <ul>
      <li><a href="/users">Users</a></li>
      <li><a href="/matches">Matches</a></li>
      <li><a href="/teams">Team</a></li>
      <li><a href="/tournaments">Tournaments</a></li>
      </ul>
      <div class="placelog">  <%= button_to "Log out", destroy_user_session_path,method: :delete, :class => "btn btn-log"%></div>
    <%elsif  current_user && current_user.has_role?(:player)%>
      <ul>
      <li><a href="/matches">Matches</a></li>
      <li><a href="/teams">Team</a></li>
      </ul>
     <div class="placelog">  <%= button_to "Log out", destroy_user_session_path,method: :delete, :class => "btn btn-log"%></div>

    <%elsif  current_user && current_user.has_role?(:organisateur)%> 
      <ul>
      <li><a href="/matches">Matches</a></li>
      <li><a href="/teams">Team</a></li>
      <li><a href="/tournaments">Tournaments</a></li>
      </ul>
      <div class="placelog">  <%= button_to "Log out", destroy_user_session_path,method: :delete, :class => "btn btn-log"%></div>
  
    <%end%>
 
</div>
