    margin-bottom : 20px;
}
hr{
    border : 0.5px solid rgb(255,179,32);
}


.logo{
    display : flex;
    flex-direction : row
}
.logo img {
    margin-top : -3%;
    width : 20%;
    height : 100%;
}

.btn-log{
    font-size : 17px;
    text-decoration : none;
    color : black;
    background-color : rgb(255,179,32);
    border : 1px solid rgb(255,179,32);
    border-radius : 50px;
    width : 100px;
    text-align : center;
    padding-top : 4px;
    padding-right : 20px;
    padding-left : 20px;
    padding-bottom : 5px;
    margin-left : auto;
    margin-bottom : 5px;
}
.placelog{
  margin-right : 5%;
  margin-left : auto;
}

