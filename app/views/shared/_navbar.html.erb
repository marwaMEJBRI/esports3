        <%= button_to "Log out", destroy_user_session_path,method: :delete %>
      </li>
      <li class="md:ml-4">
        <%= link_to "Users", users_path %>
      </li>
      <li class="md:ml-4">
        <%= link_to "Matches", matches_path %>
      </li>
      <li class="md:ml-4">
         <%= link_to "Teams", teams_path %>
      </li>
      <li class="md:ml-4">
         <%= link_to "Tournaments", tournaments_path %>
      </li>
<%elsif  current_user && current_user.has_role?(:player)%>
      <li class="md:ml-4">
        <%= button_to "Log out", destroy_user_session_path,method: :delete%>
      </li>
      <li class="md:ml-4">
        <%= link_to "Matches", matches_path%>
      </li>
      <li class="md:ml-4">
         <%= link_to "Teams", teams_path%>
      </li> 
    <%else%>      
