
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">   
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => "block text-grey-darker text-sm font-bold mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker", :id=>"username",:type=>"text", :placeholder=>"Username" %>
  </div>
  <div class="field">
    <%= f.label :password, :class => "block text-grey-darker text-sm font-bold mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password",:class => "shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3",:id=>"password", :type=>"password", :placeholder=>"******************" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
   <%= render "users/shared/links" %> 
  <% end %>
</div>

