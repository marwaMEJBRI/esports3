 <style>
.sectiontab{
    margin-top : 4%;
    margin-bottom : 2%;
    display : flex;
    flex-direction : column;
}
table{
    width : 1000px;
    border : 1px solid black;
    table-layout : fixed;
    margin-left : auto;
    margin-right : auto;
    
 }
 th {
  border: 1px solid black;
  text-align : center;
  background-color : black;
  color : rgb(255,179,32);
  font-weight : normal;
  font-size : 15px;
  padding-top : 10px;
  padding-bottom : 10px;
}
td{
  border: 1px solid black;
  text-align : center;
  font-weight : normal;
  font-size : 15px;
  padding-top : 6px;
  padding-bottom : 6px;
  
}
.sectiontab .alienbtn{
    background-color : rgb(255,179,32);
    width : 130px;
    text-align : center;
    border : 1px solid rgb(255,179,32); 
    border-radius : 50px;
    color : white;
    font-size : 13px;
    padding-left : 15px;
    padding-right : 15px;
    padding-top : 6px;
    padding-bottom : 6px;
}
.sectiontab .alienbtn:hover{
  box-shadow : 2px 1px 12px 2px rgb(255,179,32);
  
}
.sectiontab .lienbtns{
  margin-top : 3%;
  display : flex ;
  flex-direction : row;
  margin-left : 13%;
}

.lien:hover{
  color: rgb(255,179,32);
}

.sectiontab .lienWin{
    background-color : rgb(255,179,32);
    width : 150px;
    text-align : center;
    border : 1px solid rgb(255,179,32); 
    border-radius : 50px;
    color : white;
    font-size : 13px;
    margin-left : auto;
    margin-right : 15%;
    
    padding-left : 15px;
    padding-right : 15px;
    padding-top : 6px;
    padding-bottom : 6px;
}
.sectiontab .lienWin:hover{
  box-shadow : 2px 1px 12px 2px rgb(255,179,32);
}
 </style>

 <div class="sectiontab">
 <table>
 <tr>
 <th>Name</th>
 <th>Start date</th>
 <th>End date</th>
 <th>Number of matches</th>
 <th>Action</th>
 </tr>
 <tr>
 <% @tournaments.each do |tournament| %>
 <td><%= tournament.name %></td>
 <td><%= tournament.start_date %></td>
 <td><%= tournament.end_date%></td>
 <td><%= tournament.number_of_matches %></td>
 
 <td class="liens">
    <%= link_to 'Show', tournament , :class => "lien" %>
    <%= link_to 'Edit', edit_tournament_path(tournament) , :class => "lien" %>
    <%= link_to 'Destroy', tournament_path(:id => tournament.id), :method => :delete, :class => "lien" %>
 </td>

 </tr>

  <% end %>
 </table>
 
<div class="lienbtns">
 <a class="alienbtn" <%= link_to 'New tournament', new_tournament_path %> </a>
 <a class="lienWin" <%= link_to 'Tournament Result', winners_path %> </a></div>
 </div>