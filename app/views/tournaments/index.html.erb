
<p id="notice"><%= notice %></p>
<h1 class="my-8 text-4xl font-semibold text-gray-700">Tournaments</h1>
<div class="w-full px-4 mb-12 xl:w-8/12 xl:mb-0">
<div class="relative flex flex-col w-full min-w-0 mb-6 break-words bg-white rounded shadow-lg">
	<table class="w-full text-left">
		<thead class="flex w-full text-white bg-gray-800">
			<tr class="flex w-full mb-4">
				<th class="w-1/4 p-4">Name</th>
				<th class="w-1/4 p-4">Start Date</th>
        <th class="w-1/4 p-4">End Date</th>
			</tr>
		</thead>
    <tbody class="flex flex-col items-center justify-between w-full overflow-y-scroll bg-grey-light" style="height: 50vh;">
    <% @tournaments.each do |tournament| %>
      <tr class="flex w-full mb-4">
        <td class="w-1/3 px-4 py-3 text-left"><%= tournament.name %></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= tournament.start_date %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= tournament.end_date %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Show', tournament %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Edit', edit_tournament_path(tournament) %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Destroy', tournament_path(:id => tournament.id), :method => :delete%></a></td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
</div>
</div>
<%= link_to 'New tournament', new_tournament_path %><br>
