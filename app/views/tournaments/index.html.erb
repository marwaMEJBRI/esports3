<!-- component -->
<p id="notice"><%= notice %></p>
<h1 class="font-semibold text-4xl text-gray-700 my-8">Tournaments</h1>
<div class="w-full xl:w-8/12 mb-12 xl:mb-0 px-4">
<div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded">
	<table class="text-left w-full">
		<thead class="bg-gray-800 flex text-white w-full">
			<tr class="flex w-full mb-4">
				<th class="p-4 w-1/4">Name</th>
				<th class="p-4 w-1/4">Start Date</th>
        <th class="p-4 w-1/4">End Date</th>
			</tr>
		</thead>
    <tbody class="bg-grey-light flex flex-col items-center justify-between overflow-y-scroll w-full" style="height: 50vh;">
    <% @tournaments.each do |tournament| %>
      <tr class="flex w-full mb-4">
        <td class="w-1/3 text-left py-3 px-4"><%= tournament.name %></td>
        <td class="text-left py-3 px-4"><a class="hover:text-blue-500"><%= tournament.start_date %></a></td>
        <td class="text-left py-3 px-4"><a class="hover:text-blue-500"><%= tournament.end_date %></a></td>
        <td class="text-left py-3 px-4"><a class="hover:text-blue-500"><%= link_to 'Show', tournament %></a></td>
        <td class="text-left py-3 px-4"><a class="hover:text-blue-500"><%= link_to 'Edit', edit_tournament_path(tournament) %></a></td>
        <td class="text-left py-3 px-4"><a class="hover:text-blue-500"><%= link_to 'Destroy', tournament_path(:id => tournament.id), :method => :delete%></a></td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
</div>
</div>
<%= link_to 'New tournament', new_tournament_path %>