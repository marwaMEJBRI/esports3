<div class="text-gray-900 bg-gray-200">
    <div class="p-4 flex">
        <h1 class="text-3xl">
            Users page
        </h1>
    </div>
    <div class="px-3 py-4 flex justify-center">
        <table class="w-full text-md bg-white shadow-md rounded mb-4">
            <tbody>
                <tr class="border-b">
                    <th class="text-left p-3 px-5">Email</th>
                    <th class="text-left p-3 px-5">Role</th>
                    <th></th>
                </tr>
                <tr class="border-b hover:bg-orange-100 bg-gray-100">
                      <% @users.each do |user| %>
                        <td class="p-3 px-5 bg-transparent"> <%= user.email %> </td>
                        <td class="p-3 px-5 bg-transparent">
                        <%if current_user && current_user.has_role?(:player)%>   
                            player 
                          <%elsif current_user && current_user.has_role?(:admin)%>
                            admin         
                          <%end%>          
                        </td>
                        <td class="p-3 px-5 flex justify-end"><button type="button" class="mr-3 text-sm bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline"><%= link_to 'Edit', edit_user_registration_path(user) %></button>
                        <button type="button" class="text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline"><%= link_to 'Destroy', users_path(:id => user.id), :method => :delete%></button></td>
                </tr>
                      <%end%>
            </tbody>
        </table>
    </div>
</div>

