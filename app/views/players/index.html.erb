<p id="notice"><%= notice %></p>
<h1 class="my-8 text-4xl font-semibold text-gray-700">players</h1>
<div class="w-full px-4 mb-12 xl:w-8/12 xl:mb-0">
<div class="relative flex flex-col w-full min-w-0 mb-6 break-words bg-white rounded shadow-lg">


	<table class="w-full text-left">
		<thead class="flex w-full text-white bg-gray-800">
			<tr class="flex w-full mb-4">
				<th class="w-1/4 p-4">Player_Name</th>
				<th class="w-1/4 p-4">Email</th>
				<th class="w-1/4 p-4">Description</th>
				

			</tr>
		</thead>
    <tbody class="flex flex-col items-center justify-between w-full overflow-y-scroll bg-grey-light" style="height: 50vh;">
    <% @players.each do |player| %>
      <tr class="flex w-full mb-4">
        <td class="w-1/3 px-4 py-3 text-left"><%= player.player_name%></td>
        <td class="w-1/3 px-4 py-3 text-left"><%= player.email %></td>
        <td class="px-4 py-3 text-left"> <%= player.description %></td>

        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Show', player %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Edit', edit_player_path(player) %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Destroy', player_path(:id => player.id), :method => :delete%></a></td>
      </tr>
    </tbody>
    <% end %>
    </table>
  </div>
</div>
  </div>
    </div>

<%= link_to 'New player', new_player_path %>