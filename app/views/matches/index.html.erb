
<p id="notice"><%= notice %></p>
<h1 class="my-8 text-4xl font-semibold text-gray-700">Matches</h1>
<div class="w-full px-4 mb-12 xl:w-8/12 xl:mb-0">
<div class="relative flex flex-col w-full min-w-0 mb-6 break-words bg-white rounded shadow-lg">
  

	<table >
		<thead >
			<tr class="flex w-full mb-4">
				<th class="w-1/4 p-4">Name</th>
        <th class="w-1/4 p-4">tournament_id</th>
				<th class="w-1/4 p-4">Result</th>
				<th class="w-1/4 p-4">Brodcast Link</th>
				<th class="w-1/4 p-4">Start Date</th>
        <th class="w-1/4 p-4">End Date</th>

			</tr>
		</thead>
    <tbody>
    <% @matches.each do |match| %>
      <tr class="flex w-full mb-4">
        <td class="w-1/3 px-4 py-3 text-left"><%= match.name %></td>
        <td class="w-1/3 px-4 py-3 text-left"><%= match.tournament_id %></td>
        <td class="w-1/3 px-4 py-3 text-left"><%= match.result %></td>
        <td class="px-4 py-3 text-left"><%= match.brodcast_link %></a></td>
        <td class="px-4 py-3 text-left"><%= match.start_date %></a></td>
        <td class="px-4 py-3 text-left"><%= match.end_date %></a></td>
        <td class="px-4 py-3 text-left"><%= link_to 'Show', matches_path %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Edit', edit_match_path(match) %></a></td>
        <td class="px-4 py-3 text-left"><a class="hover:text-blue-500"><%= link_to 'Destroy', match_path(:id => match.id), :method => :delete%></a></td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
  </div>
    </div>

<%= link_to 'New match', new_match_path %>