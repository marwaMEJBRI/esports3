 <style>
.sectiontab{
    margin-top : 4%;
    margin-bottom : 2%;
    display : flex;
    flex-direction : column;
}
table{
    width : 1000px;
    border : 1px solid black;
    table-layout : fixed;
    margin-left : auto;
    margin-right : auto;
    
 }
 th {
  border: 1px solid black;
  text-align : center;
  background-color : black;
  color : rgb(255,179,32);
  font-weight : normal;
  font-size : 15px;
  padding-top : 10px;
  padding-bottom : 10px;
}
td{
  border: 1px solid black;
  text-align : center;
  font-weight : normal;
  font-size : 15px;
  padding-top : 6px;
  padding-bottom : 6px;
  
}
.sectiontab .alienbtn{
    background-color : rgb(255,179,32);
    width : 130px;
    text-align : center;
    border : 1px solid rgb(255,179,32); 
    border-radius : 50px;
    color : white;
    font-size : 13px;
    padding-left : 15px;
    padding-right : 15px;
    padding-top : 6px;
    padding-bottom : 6px;
}
.sectiontab .alienbtn:hover{
  box-shadow : 2px 1px 12px 2px rgb(255,179,32);
  
  }

.lien:hover{
  color: rgb(255,179,32);
}
.lienM{
  margin-top : 3%;
  display : flex ;
  flex-direction : row;
  margin-left : 13%;
}
.matchR{
    background-color : rgb(255,179,32);
    width : 150px;
    text-align : center;
    border : 1px solid rgb(255,179,32); 
    border-radius : 50px;
    color : white;
    font-size : 13px;
    margin-left : auto;
    margin-right : 15%;
    padding-left : 15px;
    padding-right : 15px;
    padding-top : 6px;
    padding-bottom : 6px;
}
.matchR:hover{
  box-shadow : 2px 1px 12px 2px rgb(255,179,32);
  
  }
 </style>

 <div class="sectiontab">
 <table>
 <tr>
 <th>Match name</th>
 <th>Broadcast link</th>
 <th>Start date</th>
 <th>End date</th>
 <th>Team one</th>
 <th>Team two</th>
 <th>Action</th>
 </tr>
 <tr>
 <% @matches.each do |match| %>
 <td><%= match.name %></td>
 <td><a href="/home/document">http://watch-streams</a></td>
 <td><%= match.start_date %></td>
 <td><%= match.end_date %></td>
 <td><%= match.team_one %></td>
 <td><%= match.team_two %></td>
 
 <td class="liens">
    <%= link_to 'Show', match , :class => "lien" %>
    <%= link_to 'Edit ', edit_match_path(match) , :class => "lien" %>
    <%= link_to 'Destroy ', match_path(:id => match.id), :method => :delete, :class => "lien" %>
 </td>

 </tr>

 <% end %>
 </table>

 <div class="lienM">
 <a class="alienbtn" <%= link_to 'New match', new_match_path %> </a>
 <a class="matchR" <%= link_to 'Match Result', results_path %> </a></div>
 </div>

 </div>