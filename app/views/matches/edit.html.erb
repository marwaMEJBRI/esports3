<h1>Edit matches page</h1>

<%= form_for(@match) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Name %>
     <%=f.text_field :name%><br>
    <%= f.label :result %><
     <%=f.text_field :result%><br>
    <%= f.label :brodcast_link %>
     <%=f.text_field :brodcast_link%><br>
    <%= f.label :start_date %>
     <%=f.text_field :start_date%><br>
    <%= f.label :end_date %>
     <%=f.text_field :end_date%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', match_path %>